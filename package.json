{
  "name": "@meltwater/mlabs-koa",
  "version": "10.0.0",
  "description": "Core middleware for Koa apps.",
  "type": "module",
  "main": "dist/index.cjs",
  "exports": {
    "import": "./index.js",
    "require": "./dist/index.cjs"
  },
  "module": "index.js",
  "sideEffects": false,
  "keywords": [
    "meltwater",
    "node"
  ],
  "homepage": "https://github.com/meltwater/mlabs-koa",
  "bugs": "https://github.com/meltwater/mlabs-koa/issues",
  "repository": "meltwater/mlabs-koa",
  "license": "MIT",
  "author": {
    "name": "Evan Sosenko",
    "email": "evan.sosenko@meltwater.com"
  },
  "files": [
    "yarn.lock",
    "index.js",
    "lib",
    "data",
    "dist",
    "docs"
  ],
  "scripts": {
    "test": "nyc ava",
    "pretest": "npm-run-all lint",
    "test:update": "ava --update-snapshots",
    "test:watch": "ava --watch",
    "test:inspect": "node --inspect node_modules/ava/profile",
    "test:inspect:watch": "nodemon --inspect node_modules/ava/profile",
    "lint": "gulp lint",
    "clean": "del dist",
    "build": "npm-run-all --parallel build:*",
    "prebuild": "npm-run-all clean",
    "build:index": "babel --source-maps --out-file-extension .cjs --out-dir dist index.js",
    "build:lib": "babel --source-maps --ignore='**/*.spec.js' --out-file-extension .cjs --out-dir dist/lib lib",
    "dist": "npm-run-all build",
    "predist": "npm-run-all test",
    "preversion": "npm-run-all dist",
    "postversion": "git push && git push --tags",
    "example": "node examples",
    "example:watch": "nodemon examples",
    "example:inspect": "node --inspect examples",
    "example:inspect:watch": "nodemon --inspect examples",
    "watch": "gulp watch",
    "pretty": "prettier --ignore-path .gitignore --write '**/*.(js|json|graphql)'",
    "format": "npm-run-all --serial pretty format:*",
    "format:js": "standard --fix",
    "report": "nyc report"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-add-import-extension",
        {
          "extension": "cjs",
          "replace": true
        }
      ]
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!dist/**/*",
      "!package/**/*"
    ]
  },
  "nyc": {
    "exclude": [
      "**/index.js",
      "lib/bootstrapper.js",
      "lib/server.js",
      "dist/**/*.js",
      "package/**/*.js",
      "examples/**/*.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.js",
      "test/",
      "tmp/"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "none",
    "endOfLine": "lf"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "resolutions": {
    "eslint": "^7.12.1",
    "standard": "^16.0.2"
  },
  "peerDependencies": {
    "@meltwater/mlabs-health": "^2.0",
    "awilix": "^4.0",
    "koa": "^2.0",
    "prom-client": "^13.0"
  },
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "@koa/cors": "^3.0.0",
    "@koa/router": "^10.0.0",
    "@meltwater/mlabs-logger": "^8.0.0",
    "@meltwater/phi": "^4.0.0",
    "awaiting": "^3.0.0",
    "change-case": "^4.1.1",
    "chokidar": "^3.0.0",
    "confit": "^3.0.0",
    "koa-conditional-get": "^3.0.0",
    "koa-etag": "^4.0.0",
    "koa-favicon": "^2.0.0",
    "koa-helmet": "^6.0.0",
    "koa-logger": "^3.1.0",
    "koa-mount": "^4.0.0",
    "minimatch": "^3.0.4",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@meltwater/examplr": "^6.0.0",
    "@meltwater/mlabs-health": "^2.0.0",
    "ava": "^3.3.0",
    "awilix": "^4.0.0",
    "babel-plugin-add-import-extension": "^1.4.3",
    "del-cli": "^3.0.0",
    "eslint": "^7.12.1",
    "gulp": "^4.0.0",
    "gulp-cli": "^2.0.0",
    "gulp-jsonlint": "^1.1.2",
    "gulp-standard": "^14.0.0",
    "gulp-watch": "^5.0.0",
    "gulplog": "^1.0.0",
    "koa": "^2.4.1",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.2",
    "nyc": "^15.0.0",
    "prettier": "^2.0.1",
    "prom-client": "^13.0.0",
    "standard": "^16.0.2",
    "testdouble": "^3.2.6"
  }
}
